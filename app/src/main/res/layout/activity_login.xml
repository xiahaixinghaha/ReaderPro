<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_page_bg"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入用户名"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bg_bindemail_et"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#979797" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:digits="@string/input_type"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:textColor="#333333"
            android:textColorHint="#ffb6bcbc"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="请输入密码"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/bg_bindemail_et"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#979797" />

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:background="@null"
            android:digits="@string/input_type"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textColorHint="#ffb6bcbc"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tvBtnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_bind_submit_btn"
        android:gravity="center"
        android:paddingLeft="78dp"
        android:paddingTop="12dp"
        android:paddingRight="78dp"
        android:paddingBottom="12dp"
        android:text="登录"
        android:textColor="#F64C3B"
        android:textSize="20sp" />
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>